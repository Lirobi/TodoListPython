{
  "version": 2,
  "builds": [
    {
      "src": "TodoList/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "TodoList/wsgi.py"
    }
  ],
  "env": {
    "DEBUG": "false"
  },
  "buildCommand": "gunicorn TodoList.wsgi:application --bind 0.0.0.0:$PORT",
  "outputDirectory": "."
}
